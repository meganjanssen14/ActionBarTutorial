<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/snack"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/textTab3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnTEST3"
        android:layout_centerHorizontal="true"
        android:text="Dessert"
        android:textAlignment="center"
        android:textSize="25sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnTEST3"
        android:text="TESTBTN 3"/>

    <RadioGroup
        android:id="@+id/radioAppetizer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textTab3"
        android:layout_toRightOf="@+id/btnTEST3">

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textTab3"
            android:layout_marginTop="42dp"
            android:layout_toStartOf="@+id/textTab3"
            android:text="Nachos" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/radioButton"
            android:layout_below="@+id/radioButton"
            android:layout_marginTop="14dp"
            android:checked="false"
            android:duplicateParentState="false"
            android:text="Mot Sticks" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/radioButton2"
            android:layout_below="@+id/radioButton2"
            android:layout_marginTop="15dp"
            android:text="Wings" />
    </RadioGroup>

</RelativeLayout>